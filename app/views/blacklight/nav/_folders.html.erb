<%= link_to "#{t(:'blacklight_folders.main_navigation.folders')} (#{current_user.folders.count})", blacklight_folders.folders_path, class: "dropdown-toggle", data: { toggle: "dropdown"}, role: "button", 'aria-expanded' => "false" %>

<ul class="dropdown-menu" role="menu">
  <li><%= link_to t(:'helpers.action.blacklight/folders/folder.create'), blacklight_folders.new_folder_path %></li>

  <% current_user.folders.most_recent.limit(Blacklight::Folders::Folder::MENU_LIMIT).each do |folder| %>
    <li><%= link_to truncate(folder.name, length: 20), blacklight_folders.folder_path(folder) %></li>
  <% end %>
  <% if current_user.folders.count > Blacklight::Folders::Folder::MENU_LIMIT %>
    <li><%= link_to t(:'blacklight_folders.main_navigation.all_folders'), blacklight_folders.folders_path %></li>
  <% end %>
</ul>
