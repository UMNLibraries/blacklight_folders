<% utils_file = File.join(Blacklight::Engine.root, 'app', 'views', '_user_util_links.html.erb') %>
<%= render file: utils_file %>

<% if current_user %>
  <div class="navbar-right">
    <ul class="nav navbar-nav" id="folders-menu">
      <li>
        <%= link_to "#{t(:'blacklight_folders.main_navigation.folders')} (#{current_user.folders.count})", blacklight_folders.folders_path %>

        <ul class="navbar-nav sub-menu">
          <li><%= link_to t(:'helpers.action.blacklight/folders/folder.create'), blacklight_folders.new_folder_path %></li>

          <% current_user.folders.each do |folder| %>
            <li> <%= link_to folder.name, blacklight_folders.folder_path(folder) %> </li>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
<% end %>
